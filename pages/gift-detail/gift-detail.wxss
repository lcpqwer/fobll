/* pages/gift-detail/gift-detail.wxss */

.shopList {
    padding: 0 40rpx;
}

.shop-num {
    line-height: 70rpx;
    color: #8a8a8a;
    font-size: 27rpx;
}

.shop-item {
    width: 50%;
    display: inline-block;
    margin-bottom: 20rpx;
}

.shopList>.shop-item:nth-child(odd)>.shop-box {
    margin-left: auto;
}

.shop-box {
    width: 325rpx;
    border-radius: 15rpx;
    background-color: white;
}

.img-box {
    width: 325rpx;
    height: 325rpx;
    border-bottom: 1rpx solid #e2e2e2;
}

.img-box image {
    width: 100%;
    height: 100%;
}
.shop-item .title-box {
    padding: 10rpx 15rpx 20rpx 15rpx;
}
.shop-item .title {
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2; /*要显示的行数*/
    -webkit-box-orient: vertical;
    line-height: 40rpx;
    height: 80rpx;
    color: 27rpx;
    font-weight: bold;
}

.bottom-box {
    height: 395rpx;
}

.bottom-main {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.gift-info {
    height: 315rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #bbb;
    border-top: 1rpx solid #bbb;
    background-color: white;
    padding: 0 40rpx;
    display: flex;
    flex-direction: column;
}

.gift-info .nav {
    font-size: 30rpx;
    padding: 30rpx 0 15rpx 0;
}
.gift-info .greet-box {
    padding: 13rpx 15rpx;
    border: 1rpx solid #979797;
    border-radius: 10rpx;
}
.gift-info .greet {
    line-height: 40rpx;
    height: 80rpx;
    font-size: 30rpx;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2; /*要显示的行数*/
    -webkit-box-orient: vertical;
}

.num-box {
    margin-left: auto;
    margin-top: auto;
    margin-bottom: auto;
    display: flex;
}

.add, .minus {
    width: 40rpx;
    height: 40rpx;
    display: flex;
}

.add>image, .minus>image {
    width: 30rpx;
    height: 30rpx;
    margin: auto 0;
}

.minus>image {
    margin-left: auto;
}

.num-box>.num {
    width: 60rpx;
    height: 40rpx;
    background-color: #eee;
    border-radius: 5rpx;
    font-size: 25rpx;
    font-weight: bold;
    text-align: center; 
}

.place-order {
    background-color: #f0f0f0;
    height: 80rpx;
    display: flex;
    line-height: 80rpx;
}

.place-order .num {
    color: #8a8a8a;
    font-size: 20rpx;
    margin-left: 40rpx;
}

.place-order .price {
    font-size: 20rpx;
    margin-left: auto;
    margin-right: 20rpx;
}

.price text {
    color: #f28e3d;
}

.price .big {
    font-size: 25rpx;
    font-weight: bold;
}

.sub {
    width: 260rpx;
    text-align: center;
    color: white;
    background-color: #f28e3d;
    font-size: 33rpx;
    font-weight: bold;
}