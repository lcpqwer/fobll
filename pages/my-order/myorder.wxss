/* pages/my-order/myorder.wxss */
.fixed {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    background-color: rgb(239, 239, 239);
    padding-bottom: 20rpx;
}
.search-box {
    margin: 20rpx 40rpx ;
    background-color: white;
    height: 65rpx;
    width: 670rpx;
    border-radius: 10rpx;
    display: flex;
}
.search-box image {
    width: 40rpx;
    height: 44rpx;
    margin: auto 20rpx;
}
.search-box input {
    height: 100%;
    width: 570rpx;
    font-size: 25rpx;
}
.nav-box {
    width: 100%;
    margin-top: 40rpx;
    height: 50rpx;
    line-height: 50rpx;
    display: flex;
}
.nav {
    width: 100%;
    height: 100%;
    text-align: center;
    color: #a9a9a9;
    font-size: 28rpx;
}
.select {
    color: #f29e5d;
    box-sizing: border-box;
    border-bottom: 2rpx solid #f29e5d;
    font-size: 32rpx;
}