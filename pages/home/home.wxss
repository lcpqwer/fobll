/* pages/home/home.wxss */

.padd1 {
    padding: 40rpx 40rpx 0 40rpx;
}

.padd {
    padding: 0 40rpx;
}
.swiper-box {
    width: 100%;
    height: 335rpx;
    border-radius: 30rpx;
    overflow: hidden;
    margin-top: 20rpx;
}

.swiper-box image {
    width: 670rpx;
}

.top {
    padding: 30rpx 0;
}

.top .info {
    font-size: 25rpx;
    line-height: 55rpx;
}

.money {
    color: rgb(242, 142, 61);
}

.money>.num {
    font-size: 40rpx;
}

.nav-box {
    height: 130rpx;
    display: flex;
    flex-direction: row;
    line-height: 130rpx;
    position: sticky;
    top: 0;
    background-color: rgb(239, 239, 239);
    z-index: 10;
}

/* .nav-box text:nth-child(2), .nav-box text:nth-child(3){
    margin: auto;
} */

.nav-item {
    width: 100%;
    text-align: center;
    font-size: 32rpx;
}
   
