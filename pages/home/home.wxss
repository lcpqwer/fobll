}

.nav-box>.nav-item:nth-child(4) {
    text-align: right;
} */

.select {
    color: rgb(242, 142, 61);
    font-size: 34rpx;
    font-weight: bold;
}

.shop-item {
    width: 50%;
    display: inline-block;
    margin-bottom: 20rpx;
}

.shop-main {
    width: 325rpx;
    height: 276rpx;
    border-radius: 20rpx;
    background-repeat: no-repeat;
    background-size: cover; /* 重点二 */
}

.price-num {
    font-size: 34rpx;
    color: #23541c;
    padding: 40rpx 0 0 15rpx;
    line-height: 40rpx;
}

.price-num .big {
    font-size: 38rpx;
}

.class-item {
    width: 320rpx;
    border-radius: 20rpx;
    background-color: #fff;
    overflow: hidden;
    display: inline-block;
    margin-top: 30rpx;
}

.class-item:nth-child(even) {
    margin-left: 30rpx;
}

.home .class-item:nth-child(1),.home .class-item:nth-child(2) {
    margin-top: 0
}

.home .class-item:nth-child(5),.home .class-item:nth-child(6) {
    margin-bottom: 30rpx;
}

.class-item>image {
    height: 185rpx;
    display: block;
}

.class-item .text {
    display: flex
}

.class-item .text .big {
    margin-left: auto;
    margin-top: auto;
    margin-bottom: auto;
}

.class-item .text image {
    height: 28rpx;
    width: 15rpx;
    margin-left: 23rpx;
    margin-right: auto;
    margin-top: auto;
    margin-bottom: auto;
}

.class-item .num {
    text-align: center;
    line-height: 53rpx;
    color: #353535;
    font-size: 34rpx;
}

.class-item .num .big {
    font-size: 38rpx;
}

.custom {
    display: flex;
    height: 40rpx;
}

.custom image {
    width: 15rpx;
    margin: auto 15rpx;
}

.shop-money {
    color: #f60;
    font-size: 50rpx;
}

.num1 {
    font-weight: bolder;
}

.num2 {
    font-size: 25rpx;
}

