/* pages/want/want.wxss */
#want {
    padding: 40rpx 40rpx 0 40rpx;
}

.empty-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.empty {
    margin: auto;
    display: flex;
    flex-direction: column;
}

.empty image {
    width: 160rpx;
    height: 134rpx;
}

.empty text {
    line-height: 40rpx;
    font-size: 35rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    font-weight: bold;
}

.nav {
    line-height: 80rpx;
    text-indent: 60rpx;
    font-size: 26rpx;
}

.bottom {
    height: 80rpx;
    width: 100%;
    background-color: white;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid rgb(239, 239, 239);
}

.del {
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
    font-weight: bold;
    float: right;
    background-color: #f28e3d;
    width: 260rpx;
    color: white;
}

.allChecked {
    height: 100%;
    width: 90rpx;
    color: #afafaf;
    display: flex;
    margin-left: 55rpx;
}

.allChecked>view:nth-child(2) {
    line-height: 80rpx;
    font-size: 25rpx;
    margin-left: 8rpx;
}

.checked {
    width: 28rpx;
    height: 28rpx;
    border: 1rpx solid #afafaf;
    border-radius: 50%;
    margin-top: 25rpx;
    background-repeat: no-repeat;
    background-size: cover; /* 重点二 */
}
