/* pages/shop-car/shop-car.wxss */

.empty-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.empty {
    margin: auto;
    display: flex;
    flex-direction: column;
}

.empty image {
    width: 160rpx;
    height: 134rpx;
}

.empty text {
    line-height: 40rpx;
    font-size: 35rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    font-weight: bold;
}

#shop-car {
    width: 100%;
    height: 100%;
    display: flex;
}

.nav-list {
    background-color: #6d6c6c;
    width: 120rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.nav-list>view {
    height: 90rpx;
    margin-top: 20rpx;
    /* text-align: center; */
    line-height: 90rpx;
    color: white;
    font-size: 30rpx;
    text-indent: 23rpx;
}

.selected {
    background-color: #474747 !important;
}

.bottom {
    width: 100%;
    height: 100rpx;
    background-color: rgb(240, 240, 240);
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
}

.choose-box {
    margin-left: 40rpx;
    line-height: 100rpx;
    font-size: 25rpx;
    color: rgb(159, 159, 159);
    display: flex;
    flex-direction: row;
}

.choose {
    border: 2rpx solid rgb(213, 213, 213);
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
    background-repeat: no-repeat;
    background-size: cover; /* 重点二 */
    margin-top: 50rpx;
    transform: translateY(-50%);
}

.choose-box text {
    margin-left: 8rpx;
}

.money {
    position: absolute;
    right: 300rpx;
    line-height: 100rpx;
    font-size: 25rpx;
    color: rgb(159, 159, 159);
}

.money>text {
    color: #f28e3d;
}

.small {
    font-size: 20rpx;
}

.order {
    width: 260rpx;
    background-color: rgb(242, 142, 61);
    line-height: 100rpx;
    text-align: center;
    color: white;
    font-size: 35rpx;
    position: absolute;
    right: 0;
    font-weight: bold;
}

.big {
    font-size: 30rpx;
}
