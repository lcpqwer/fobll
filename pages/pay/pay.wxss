/* pages/pay/pay.wxss */

.top {
    height: 100rpx;
    display: flex;
    flex-direction: column;
    padding-top: 85rpx;
    padding-bottom: 75rpx;
}

.top .time {
    margin: 0 auto;
    font-size: 25rpx;
    color: #747474;
}

.top .price {
    margin: 0 auto;
    margin-top: auto;
    font-size: 25 rpx;
    color: #484848 !important;
}

.top .big {
    font-size: 40rpx;
}

.top .blod {
    font-weight: bold;
}

.box {
    width: 590rpx;
    border-radius: 20rpx;
    background-color: white;
    padding: 0 40rpx;
    margin: 0 auto;
}

/* 礼包 */

.logo {
    width: 106rpx;
    height: 34rpx;
    padding: 23rpx 0;
}

.shop-info {
    display: flex;
    padding-bottom: 20rpx;
}

.img-box {
    width: 140rpx;
    height: 140rpx;
    border: 1rpx solid #f4f4f4;
    border-radius: 20rpx;
    display: flex;
    overflow: hidden;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap-reverse;
}

/* 头像style start */

.avatarItem--1 {
    width: 100%;
    height: 100%;
}

.avatarItem--2 {
    width: 47%;
    height: 47%;
    margin: 1%;
}

.avatarItem--3 {
    width: 30%;
    height: 30%;
    margin: 1%;
}

.img>image {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
}

/* 头像style end */

.info-box {
    width: 420rpx;
    margin-left: auto;
}

.info-title {
    font-size: 30rpx;
    font-weight: bold;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info-name {
    width: 100%;
    height: 60rpx;
    font-size: 20rpx;
    line-height: 30rpx;
    color: #949494;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2; /*要显示的行数*/
    -webkit-box-orient: vertical;
}

.money {
    width: 100%;
    height: 50rpx;
    display: flex;
}

.price {
    color: #f28e3d;
    font-size: 20rpx;
    margin: auto 0;
}

.big {
    font-size: 25rpx;
}

.num {
    width: 60rpx;
    height: 35rpx;
    line-height: 35rpx;
    text-align: center;
    font-size: 25rpx;
    background-color: #eee;
    margin: auto 0 auto auto;
}

/* 折扣商品展示 start */

.dis-box {
    width: 100%;
    height: 140rpx;
    display: flex;
    padding-bottom: 40rpx;
}

.dis-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 20rpx;
    border: 1rpx solid #c0c0c0;
}

.dis-img>image {
    width: 100%;
    height: 100%;
}

.dis-info-box {
    width: 410rpx;
    height: 100%;
    margin-left: auto;
    display: flex;
    flex-direction: column;
}

.dis-info-box>view {
    height: 100%;
    width: 100%;
    display: flex;
}

.dis-title {
    font-size: 30rpx;
    font-weight: bold;
}

.dis-price {
    color: #f28e3d;
    font-size: 25rpx;
    margin: auto 0;
}

.dis-num {
    height: 35rpx;
    width: 60rpx;
    text-align: center;
    line-height: 35rpx;
    border-radius: 5rpx;
    background-color: #eee;
    font-size: 25rpx;
    font-weight: bold;
    margin: auto 0 auto auto;
}

.small {
    font-size: 20rpx;
}

/* 折扣商品展示 end */

/* 方式选择 start */

.way-box {
    width: 590rpx;
    border-radius: 20rpx;
    background-color: white;
    padding: 0 40rpx;
    margin: 0 auto;
    margin-top: 20rpx;
}

.way {
    width: 100%;
    display: flex;
    height: 130rpx;
}

.way-box:first-child {
    height: 160rpx;
}

.way-logo {
    width: 50rpx;
    height: 50rpx;
    margin: auto 0;
}

.main {
    width: 515rpx;
    height: 100%;
    margin-left: auto;
    border-bottom: 1rpx solid #dadada;
    display: flex;
}

.content {
    margin: auto 0;
}

.content>view:last-child {
    font-size: 20rpx;
}

.content>view:first-child {
    font-size: 30rpx;
}

.way-check {
    width: 40rpx;
    height: 40rpx;
    margin: auto 0;
    margin-left: auto;
}

.ac-info-box {
    width: 515rpx;
    margin-left: auto;
    font-size: 20rpx;
}

.noBorder {
    border: none;
}

.transfer .way-logo {
    height: 30rpx;
}

/* 方式选择 end */

.sub {
    width: 610rpx;
    height: 80rpx;
    background-color: #f28e3d;
    color: white;
    border-radius: 10rpx;
    line-height: 80rpx;
    text-align: center;
    margin: auto;
    margin-top: 80rpx;
    margin-bottom: 80rpx;
    font-size: 35rpx;
}

/* 信息填写 */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    left: 0;
}

.edit-box {
    background-color: white;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 0 40rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 670rpx;
}

.edit-box .title {
    height: 120rpx;
    display: flex;
    border-bottom: 1rpx solid #ebebeb;
}

.edit-box .title .nav {
    font-size: 35rpx;
    margin: auto 0;
    font-weight: bold;
}

.title .img-box {
    width: 50rpx;
    height: 100%;
    margin-left: auto;
    display: flex
}

.edit-box .title image {
    width: 25rpx;
    height: 25rpx;
    margin: auto;
}

.edit-box .edit-main {
    padding: 20rpx 0;
}

.edit-main .input-box {
    height: 60rpx;
    display: flex;
    line-height: 60rpx;
    margin-top: 20rpx;
}

.edit-box .input-box:first-child {
    margin: 0
}

.edit-main .input-box .nav {
    font-size: 30rpx;
}

.input-box .input {
    width: 520rpx;
    margin-left: auto;
    height: 100%;
    border-bottom: 1rpx solid #ebebeb;
    font-size: 30rpx;
}

.input-sub {
    width: 610rpx;
    height: 80rpx;
    background-color: #f28e3d;
    color: white;
    border-radius: 10rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 40rpx auto;
    font-size: 35rpx;
}
