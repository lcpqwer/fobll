/* pages/my-active.wxss */
#my-active {
    padding: 40rpx;
}
.active {
    height: 360rpx;
    background-repeat: no-repeat;
	background-size: cover; /* 重点二 */
    border-radius: 25rpx;
    margin-top: 35rpx;
}
.title-box {
   background:linear-gradient(rgba(255,255,255,0),rgba(255,255,255,1));
   height: 100%;
   display: flex;
   border-bottom-left-radius: 25rpx;
   border-bottom-right-radius: 25rpx;
}

.title {
   line-height: 120rpx;
   margin-top: auto;
   width: 100%;
   text-indent: 25rpx;
   font-size: 30rpx;
   font-weight: bold;
}

.empty-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.empty {
    margin: auto;
    display: flex;
    flex-direction: column;
}

.empty image {
    width: 160rpx;
    height: 134rpx;
}

.empty text {
    line-height: 40rpx;
    font-size: 35rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    font-weight: bold;
}