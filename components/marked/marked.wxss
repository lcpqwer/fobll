/* components/marked/marked.wxss */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.1);
    display: flex;
    z-index: 10000;
}
.main {
    padding: 25rpx 40rpx;
    max-width: 590rpx;
    background-color: white;
    margin: auto;
    border-radius: 15rpx;
    display: flex;
}

.main image {
    width: 35rpx;
    height: 35rpx;
    margin: auto 0;
}

.main .text {
    font-size: 30rpx;
    line-height: 45rpx;
    margin-left: 20rpx;
    max-width: 535rpx;
}