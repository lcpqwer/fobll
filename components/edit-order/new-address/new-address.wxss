/* components/edit-order/new-address/new-address.wxss */

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    left: 0;
}

.box {
    background-color: white;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 0 40rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 670rpx;
}

.title {
    height: 120rpx;
    display: flex;
    border-bottom: 1rpx solid #ebebeb;
}

.title .nav {
    font-size: 35rpx;
    margin: auto 0;
    font-weight: bold;
}

.title image {
    width: 25rpx;
    height: 25rpx;
    margin: auto 0 auto auto;
}

.main {
    padding: 20rpx 0;
}

.main .item {
    margin-top: 40rpx;
    height: 50rpx;
    display: flex;
    line-height: 50rpx;
}

.main .item .nav {
    color: #a4a4a4;
    font-size: 28rpx;
}

.main .item .text {
    width: 525rpx;
    margin-left: auto;
    height: 100%;
    border-bottom: 1rpx solid #ebebeb;
    font-size: 30rpx;
    display: flex;
    font-weight: bold;
}

.pstyle {
    color: #cbcbcb !important;
    font-weight: normal !important;
}

.push {
    width: 15rpx;
    height: 30rpx;
    margin: auto 0 auto auto;
}

.btn {
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: white;
    background-color: #f28e3d;
    border-radius: 10rpx;
    margin: 40rpx auto;
    font-weight: bold;
    font-size: 30rpx;
}

picker {
    margin-left: auto;
}