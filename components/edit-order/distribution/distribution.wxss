/* components/edit-order/distribution/distribution.wxss */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    left: 0
}
.box {
    background-color: white;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 0 40rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 670rpx;
}

.title {
    height: 120rpx;
    display: flex;
    border-bottom: 1rpx solid #ebebeb;
}

.title .nav {
    font-size: 35rpx;
    margin: auto 0;
    font-weight: bold;
}

.title image {
    width: 25rpx;
    height: 25rpx;
    margin: auto 0 auto auto;
}

.main {
    padding: 30rpx 0;
}
.main .item {
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
    font-size: 28rpx;
}

.main .item image {
    margin: auto 0 auto auto;
    width: 30rpx;
    height: 30rpx;
}

.main .item:last-child image {
    height: 30rpx;
    width: 15rpx;
}

.main .item .nav {
    color: #f28e3d;
}