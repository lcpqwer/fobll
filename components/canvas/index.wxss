/* canvas/index.wxss */
.canvas {
    background-color: #fff;
    border-radius: 10px;
    padding:10px;
}

.main {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: flex;
    flex-direction: column;
    z-index: 10000;
}
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(149, 149, 149, 0.6);
    z-index: 9999;
}

.save {
    width: 400rpx;
    height: 80rpx;
    background-color: #f28e3d;
    font-size: 30rpx;
    color: white;
    text-align: center;
    line-height: 80rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    border-radius: 20rpx;
}

.close {
    position: fixed;
    z-index: 10000;
    width: 40rpx;
    height: 40rpx;
    top: 40rpx;
    right: 40rpx;
}