/* components/shop-car-item/shop-car-item.wxss */

.shop {
    width: 100%;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    padding-bottom: 40rpx;
}

.choose {
    width: 60rpx;
    height: 100%;
    position: relative;
}

.choose-box {
    width: 30rpx;
    height: 30rpx;
    border: 2rpx solid rgb(213, 213, 213);
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.choose-box image {
    width: 100%;
}

.choose-img {
    border: none !important;
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.img {
    width: 140rpx;
    height: 100;
    background-color: rgb(244, 244, 244);
    border-radius: 15rpx;
    border: 1rpx solid rgb(213, 213, 213);
    overflow: hidden;
}

.img image {
    width: 100%;
    height: 100%;
}

.info {
    width: 420rpx;
    margin-left: 20rpx;
}

.title {
    font-size: 27rpx;
    font-weight: bold;
    height: 45rpx;
    line-height: 45rpx;
}

.type-box {
    height: 50rpx;
    position: relative;
}

.type {
    font-size: 20rpx;
    height: 35rpx;
    border: 1rpx solid rgb(250, 208, 174);
    line-height: 35rpx;
    padding: 0 8rpx;
    border-radius: 20rpx;
    color: rgb(250, 208, 174);
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.money {
    font-size: 30rpx;
    height: 45rpx;
    line-height: 45rpx;
    position: relative;
}

.money>text {
    color: rgb(228, 63, 63);
}

.small {
    font-size: 20rpx;
}

.num {
    /* float: right; *//* display: flex; *//* flex-direction: row; */
}

.add, .minus {
    width: 30rpx;
    height: 30rpx;
    border: 1rpx solid rgb(164, 164, 164);
    border-radius: 50%;
    color: rgb(164, 164, 164);
    text-align: center;
    vertical-align: middle;
    font-size: 30rpx;
}

.add, .minus, .num input {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.minus {
    position: absolute;
    right: 0;
}

.add>text, .minus>text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.add {
    right: 110rpx;
}

.num input {
    width: 60rpx;
    height: 40rpx;
    background-color: rgb(238, 238, 238);
    right: 42rpx;
    border-radius: 10rpx;
    text-align: center;
}
