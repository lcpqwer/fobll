/* components/shop_car_gift/item/item.wxss */

.shop-warpper {
    width: 100%;
    height: 240rpx;
    background-color: white;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
}

.shop-box {
    width: 710rpx;
    height: 240rpx;
    display: flex;
    
}

.shop-info-box {
    width: 590rpx;
    height: 200rpx;
    display: flex;
    padding: 20rpx 0;
}

.shop-info-box>view:last-child {
    width: 530rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.info-box1 {
    height: 140rpx;
    width: 100%;
    display: flex;
}

/* 头像style start */

.img-box {
    width: 140rpx;
    height: 140rpx;
    border: 1rpx solid #f4f4f4;
    border-radius: 20rpx;
    display: flex;
    overflow: hidden;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap-reverse;
}

.avatarItem--1 {
    width: 100%;
    height: 100%;
}

.avatarItem--2 {
    width: 47%;
    height: 47%;
    margin: 1%;
}

.avatarItem--3 {
    width: 30%;
    height: 30%;
    margin: 1%;
}

.img>image {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
}

/* 头像 end */

.info-box1>view:last-child {
    width: 350rpx;
    margin: 0 auto;
}

.shop-title {
    width: 100%;
    font-size: 30rpx;
    height: 45rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shops-name {
    width: 100%;
    line-height: 33rpx;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 3; /*要显示的行数*/
    -webkit-box-orient: vertical;
    font-size: 25rpx;
    color: #353535;
}

.info-box2 {
    height: 40rpx;
    width: 100%;
    margin-top: auto;
    display: flex;
}

.price {
    font-size: 25rpx;
    line-height: 40rpx;
    color: #f28e3d;
    display: flex;
}

.num-box {
    margin-left: auto;
    margin-right: 20rpx;
    display: flex;
}

.add, .minus {
    width: 40rpx;
    height: 40rpx;
    display: flex;
}

.add>image, .minus>image {
    width: 30rpx;
    height: 30rpx;
    margin: auto 0;
}

.minus>image {
    margin-left: auto;
}

.num-box>.num {
    width: 60rpx;
    height: 40rpx;
    background-color: #eee;
    border-radius: 5rpx;
    font-size: 25rpx;
    font-weight: bold;
    text-align: center; 
}



.choose {
    width: 60rpx;
    height: 100%;
    position: relative;
}

.choose-box {
    width: 30rpx;
    height: 30rpx;
    border: 2rpx solid rgb(213, 213, 213);
    border-radius: 50%;
    background-repeat: no-repeat;
    background-size: cover; /* 重点二 */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.choose-img {
    border: none;
    width: 35rpx;
    height: 35rpx;
}

.del {
    width: 120rpx;
    height: 100% !important;
    background-color: red;
    color: white;
    vertical-align: top;
    position: relative;
}

.del>text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
