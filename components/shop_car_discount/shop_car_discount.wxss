/* components/shop_car_100/shop_car_100.wxss */
@import "../../static/shop-car-del.wxss";
.shop-warpper {
    width: 590rpx;
    padding:  0 20rpx;
    height: 100%;
    overflow: scroll;
}

.shop-warpper::-webkit-scrollbar {
    display: none;
}
.empty-box {
    width: 590rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.empty {
    margin: auto;
    display: flex;
    flex-direction: column;
}

.empty image {
    width: 160rpx;
    height: 134rpx;
}

.empty text {
    line-height: 40rpx;
    font-size: 35rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    font-weight: bold;
}

.shop-warpper::-webkit-scrollbar {
    display: none;
}
.bottom-box {
    height: 120rpx;
}
.bottom {
    width: 100%;
    height: 100rpx;
    background-color: rgb(240, 240, 240);
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    left: 0;
}

.choose-box {
    margin-left: 40rpx;
    line-height: 100rpx;
    font-size: 25rpx;
    color: rgb(159, 159, 159);
    display: flex;
    flex-direction: row;
}

.choose {
    border: 2rpx solid rgb(213, 213, 213);
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
    margin-top: 50rpx;
    transform: translateY(-50%);
}

.choose-img {
    border: none;
    width: 30rpx;
    height: 30rpx;
}

.choose-box text {
    margin-left: 8rpx;
}

.money {
    position: absolute;
    right: 300rpx;
    line-height: 100rpx;
    font-size: 25rpx;
    color: rgb(159, 159, 159);
}

.money>text {
    color: #f28e3d;
}

.small {
    font-size: 20rpx;
}

.order {
    width: 260rpx;
    background-color: rgb(242, 142, 61);
    line-height: 100rpx;
    text-align: center;
    color: white;
    font-size: 35rpx;
    position: absolute;
    right: 0;
    font-weight: bold;
}
.big {
    font-size: 30rpx;
}
